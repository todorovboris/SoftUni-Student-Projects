<section id='details-info'>
    <h1>Details</h1>
    <div class='image'>
        <img src='{{disaster.image}}' />
    </div>

    <div class='info'>
        <div class='text'>
            <h1 id='name'>{{disaster.name}}</h1>
            <h3 id='location'>Location: {{disaster.location}}</h3>
            <p id='type'>Type: {{disaster.type}}</p>
            <p id='year'><span>Year of the Event: {{disaster.year}}</span></p>
            <p id='interested'>Interested: {{disaster.interestedList.length}}</p>
            <p id='description'>{{disaster.description}} </p>
        </div>
        {{#if user}}
            <div class='product-btn'>
                <!--Only for registered user and author of the publication -->
                {{#if isOwner}}
                    <div class='author'>
                        <a href='#' class='btn-edit'>Edit</a>
                        <a href='#' class='btn-delete'>Delete</a>
                    </div>
                {{else}}
                    {{#unless isInterested}}
                        <!-- Logged in user who has not yet interested for this post-->
                        <a href='/disasters/{{disaster._id}}/interest' class='btn-interested'>Interested</a>
                    {{else}}
                        <!-- Logged in user who has already interested for this post-->
                        <p class='interested-message'>You've already been interested in this event!</p>
                    {{/unless}}
                {{/if}}
            </div>
        {{/if}}
    </div>
</section>