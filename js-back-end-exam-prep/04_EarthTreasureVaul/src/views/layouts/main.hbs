<html lang='en'>

    <head>
        <meta charset='UTF-8' />
        <meta http-equiv='X-UA-Compatible' content='IE=edge' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link rel='stylesheet' href='/styles/styles.css' />
        <title>Earth Treasure | {{pageTitle}}</title>
    </head>

    <body>
        {{#if error}}
            <div>
                <div class='errorContainer'>
                    <p>{{error}}</p>
                </div>
            </div>
        {{/if}}

        <div id='wrapper'>
            <header>
                <!-- Navigation -->
                <nav>
                    <div>
                        <a href='/'>Home</a>
                        <a href='/stones/dashboard'>Dashboard</a>
                        <a href='#'>Search</a>
                    </div>
                    {{#if user}}
                        <!-- Logged-in users -->
                        <div class='user'>
                            <a href='/stones/create'>Add Stones</a>
                            <a href='/auth/logout'>Logout</a>
                        </div>
                    {{else}}
                        <!-- Guest users -->
                        <div class='guest'>
                            <a href='/auth/login'>Login</a>
                            <a href='/auth/register'>Register</a>
                        </div>
                    {{/if}}
                </nav>
            </header>

            {{{body}}}

            <footer>
                <p>@EarthTreasureVaul</p>
            </footer>
        </div>
    </body>

</html>