<section id='search'>
    <h1>Search</h1>
    <form action='' method='' class='form'>
        <input type='text' class='search' name='search' placeholder='Title...' />
        <input type='text' name='' class='genre' placeholder='Genre...' />
        <input type='number' name='' class='year' placeholder='Year...' />
        <input type='submit' value='search' />
    </form>
</section>

<section id='catalog'>
    <div class='band'>

        {{#each movies}}
            <div class='flip flip-vertical'>
                <div class='front'>
                    <img src='{{imageUrl}}' alt='Jungle-Cruise' />
                </div>
                <div class='back'>
                    <h1>{{title}}</h1>
                    <h2>Genre: {{genre}}</h2>
                    <p>Description: {{description}}</p>
                    <a href='/movie/{{id}}' class='details'>Details</a>
                </div>
            </div>
        {{else}}
            <div class='no-posts'>
                <p class='no-offer'>There are no posts yet...</p>
            </div>
        {{/each}}

    </div>
</section>